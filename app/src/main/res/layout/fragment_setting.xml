<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="@dimen/space_4_dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_8_dp"
                        android:layout_marginEnd="@dimen/space_8_dp"
                        android:text="Settings"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!--            Social Media-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8_dp"
                    android:layout_marginEnd="@dimen/space_8_dp"
                    android:padding="@dimen/space_8_dp"
                    android:text="follows us on"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_16_sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_marginTop="@dimen/space_8_dp"
                android:layout_marginStart="@dimen/space_16_dp"
                android:layout_marginEnd="@dimen/space_16_dp"
                android:layout_marginBottom="@dimen/space_8_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_facebook"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/fb"/>
                    <ImageView
                        android:layout_marginStart="@dimen/space_20_dp"
                        android:id="@+id/img_whatsapp"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/wa"/>
                    <ImageView
                        android:layout_marginStart="@dimen/space_20_dp"
                        android:id="@+id/img_instagram"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/insta"/>
                    <ImageView
                        android:layout_marginStart="@dimen/space_20_dp"
                        android:id="@+id/img_youtube"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/yt"/>
                    <ImageView
                        android:layout_marginStart="@dimen/space_20_dp"
                        android:id="@+id/img_linked_in"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/ln"/>
                    <ImageView
                        android:layout_marginStart="@dimen/space_20_dp"
                        android:id="@+id/img_twitter"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/tw"
                        />
                    <ImageView
                        android:layout_marginStart="@dimen/space_20_dp"
                        android:id="@+id/img_google"
                        android:layout_width="@dimen/space_30_dp"
                        android:layout_height="@dimen/space_30_dp"
                        android:src="@drawable/google"
                        />
                </LinearLayout>


            </HorizontalScrollView>


        </LinearLayout>
        <!--            End-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8_dp"
                android:layout_marginEnd="@dimen/space_8_dp"
                android:padding="@dimen/space_8_dp"
                android:text="General info"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_16_sp"

                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8_dp"
            android:background="@color/white"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16_dp"
                android:layout_marginEnd="@dimen/space_16_dp"
                android:background="@color/white"
                android:orientation="vertical">
                <!--                   About Us-->
                <RelativeLayout
                    android:id="@+id/relative_holding_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_about_us"
                        android:layout_width="@dimen/space_25_dp"
                        android:layout_height="@dimen/space_25_dp"
                        android:src="@drawable/ic_about_us_black"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:text="About Us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_16_dp"
                        android:layout_toRightOf="@+id/img_about_us"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14_sp" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1_dp"
                    android:layout_marginStart="@dimen/space_32_dp"
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:background="@color/grey_4" />
                <!--                    End-->
                <!--                 Contact Us-->
                <RelativeLayout
                    android:id="@+id/relative_holding_contact_us"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_contact_us"
                        android:layout_width="@dimen/space_25_dp"
                        android:layout_height="@dimen/space_25_dp"
                        android:src="@drawable/ic_call_black"
                            app:tint="@color/colorPrimary" />

                    <TextView
                        android:text="Contact us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_16_dp"
                        android:layout_toRightOf="@+id/img_contact_us"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14_sp" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1_dp"
                    android:layout_marginStart="@dimen/space_32_dp"
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:background="@color/grey_4" />
                <!--                    End-->

                <!--                  Terms & Conditions-->
                <RelativeLayout
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:id="@+id/relative_holding_terms_and_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_terms_conditions"
                        android:layout_width="@dimen/space_25_dp"
                        android:layout_height="@dimen/space_25_dp"
                        android:src="@drawable/ic_terms_conditions_black"
                        />

                    <TextView
                        android:text="terms and condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_16_dp"
                        android:layout_toRightOf="@+id/img_terms_conditions"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14_sp" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1_dp"
                    android:layout_marginStart="@dimen/space_32_dp"
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:background="@color/grey_4" />
                <!--                    End-->
                <!--                    Privacy policy-->
                <RelativeLayout
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:id="@+id/relative_holding_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_privacy_policy"
                        android:layout_width="@dimen/space_25_dp"
                        android:layout_height="@dimen/space_25_dp"
                        android:src="@drawable/ic_privacy_policy_black"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:text="Privacy policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_16_dp"
                        android:layout_toRightOf="@+id/img_privacy_policy"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14_sp" />


                </RelativeLayout>
                <!--                    End-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1_dp"
                    android:layout_marginStart="@dimen/space_32_dp"
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:background="@color/grey_4" />

                <!--                  rate app-->
                <RelativeLayout

                    android:id="@+id/relative_holding_rate_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10_dp">

                    <ImageView
                        android:id="@+id/img_rate_app"
                        android:layout_width="@dimen/space_25_dp"
                        android:layout_height="@dimen/space_25_dp"
                        android:src="@drawable/ic_rating"
                        app:tint="@color/colorPrimary" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_16_dp"
                        android:layout_toRightOf="@+id/img_rate_app"
                        android:text="Rate app"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14_sp" />

                </RelativeLayout>

                <!--                    End-->


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1_dp"
                    android:layout_marginStart="@dimen/space_32_dp"
                    android:layout_marginTop="@dimen/space_10_dp"
                    android:background="@color/grey_4" />

                <!--                    share app-->
                <RelativeLayout
                    android:layout_marginBottom="@dimen/space_8_dp"
                    android:id="@+id/relative_holding_share_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10_dp">

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="@dimen/space_25_dp"
                        android:layout_height="@dimen/space_25_dp"
                        android:src="@drawable/ic_share_black"
                        app:tint="@color/colorPrimary" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_16_dp"
                        android:layout_toRightOf="@+id/img_share"
                        android:text="Share app"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14_sp" />

                </RelativeLayout>
                <!--        End-->


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</layout>